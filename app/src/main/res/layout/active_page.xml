<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/active_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">




                <TextView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тренировок ещё не было"
                    android:id="@+id/new_no_trains"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:textSize="13dp" />


                <LinearLayout
                    android:id="@+id/new_trains_count"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone">
                    <TextView
                        android:text="новая"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@android:color/black"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:id="@+id/new_trains_total_dig" />

                        <TextView
                            android:text="тренировки"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/new_trains_total_txt"
                            android:textSize="13dp" />

                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="последняя только что"
                    android:id="@+id/since_last_train"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:textSize="13dp" />

                <LinearLayout
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/done_trains"
                    android:visibility="gone">

                    <TextView
                        android:textColor="@android:color/black"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:id="@+id/current_train_dig" />

                    <TextView
                        android:text="из"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:id="@+id/trains_total_dig" />

                    <TextView
                        android:text="тренировки"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/trains_total_txt"
                        android:textSize="13dp" />

                </LinearLayout>



                <ImageView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/more_button"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_more"
                    android:layout_marginRight="5dp" />
            </FrameLayout>

            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:src="@drawable/wallp"
                android:cropToPadding="false"
                android:id="@+id/program_cover" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Program name"
                    android:id="@+id/program_title"
                    android:textSize="18dp"
                    android:textColor="@android:color/black" />

                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/program_parts_view"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="6dp" />

                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/producer_view"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тренироваться"
                    android:id="@+id/gotrain_button"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="10dp" />


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>