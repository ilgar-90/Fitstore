<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.actonica.fitstore.Activities.SigninActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Для того чтобы начать заниматься введите номер своего телефона"
        android:id="@+id/textView2"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="+" />

        <EditText
            android:textColor="#000000"
            android:hint="Номер телефона"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="11"
            android:id="@+id/phone_edit" />
    </LinearLayout>


    <EditText
        android:textColor="#000000"
        android:inputType="number"
        android:hint="XXXX"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/code_input"
        android:maxLength="4"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/error_block">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Введённый код неверный"
            android:id="@+id/error_message"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff0000"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Повторите ввод или "
                android:layout_gravity="center_horizontal" />

            <TextView
                android:clickable="true"
                android:id="@+id/refresh_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="запросите новый"
                android:layout_gravity="center_horizontal"
                android:textColor="#0080ff" />


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/refresh_code_block"
        android:visibility="gone">


        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Если код не пришёл, нажмите" />

        <TextView
            android:clickable="true"
            android:id="@+id/get_new_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выслать новый код"
            android:layout_gravity="center_horizontal"
            android:textColor="#0080ff"
            android:layout_marginTop="10dp" />

    </LinearLayout>



    <TextView
        android:enabled="false"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:id="@+id/request_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Получить смс-код"
        android:layout_gravity="center_horizontal"
        android:textColor="#0080ff" />


</LinearLayout>
